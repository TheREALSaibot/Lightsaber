<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.blintbence.lightsaber" >

    <uses-feature android:name="android.hardware.screen.portrait" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Lightsaber"
            android:label="@string/title_activity_lightsaber" >
        </activity>
        <activity
            android:name=".Compass"
            android:label="@string/title_activity_compass" >
        </activity>
        <activity
            android:name=".R2d2"
            android:label="@string/title_activity_r2d2" >
        </activity>
        <activity
            android:name=".Geiger"
            android:label="@string/title_activity_geiger" >
        </activity>
    </application>

</manifest>
